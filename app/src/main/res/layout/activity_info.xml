<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".view_util.InfoActivity"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar" />


    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:layout_marginBottom="30dp"
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logo_color" />

            <TextView
                android:textAppearance="?attr/textAppearanceBody2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_desc" />

            <TextView
                android:id="@+id/text_versi"
                android:textAppearance="?attr/textAppearanceCaption"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Versi 1.0" />


            <com.google.android.material.button.MaterialButton
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:onClick="onboardclick"
                android:textAppearance="?attr/textAppearanceOverline"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/margin_full"
                android:layout_marginRight="@dimen/margin_full"
                android:layout_height="wrap_content"
                android:id="@+id/button_onboard"
                app:icon="@drawable/ic_slideshow"
                app:iconSize="20dp"
                app:iconPadding="8dp"
                android:text="Lihat penjelasan"/>


            <com.google.android.material.button.MaterialButton
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/margin_full"
                android:layout_marginRight="@dimen/margin_full"
                android:layout_marginBottom="5dp"
                android:onClick="shareclick"
                android:textAppearance="?attr/textAppearanceOverline"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_height="wrap_content"
                android:id="@+id/button_share"
                app:icon="@drawable/ic_share"
                app:iconSize="20dp"
                app:iconPadding="8dp"
                android:text="Bagikan"/>

            <com.google.android.material.button.MaterialButton
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/margin_full"
                android:layout_marginRight="@dimen/margin_full"
                android:layout_marginBottom="5dp"
                android:onClick="rateclick"
                android:textAppearance="?attr/textAppearanceOverline"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_height="wrap_content"
                android:id="@+id/button_rate"
                app:icon="@drawable/ic_rate_review"
                app:iconSize="20dp"
                app:iconPadding="8dp"
                android:text="Beri ulasan"/>

            <com.google.android.material.button.MaterialButton
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/margin_full"
                android:layout_marginRight="@dimen/margin_full"
                android:layout_marginBottom="5dp"
                android:onClick="hubungiclick"
                android:textAppearance="?attr/textAppearanceOverline"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_height="wrap_content"
                android:id="@+id/button_hubungi"
                app:icon="@drawable/ic_chat"
                app:iconSize="20dp"
                app:iconPadding="8dp"
                android:text="Hubungi Admin"/>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

